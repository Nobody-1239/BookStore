@page
@model BookStore.Pages.Admin.CreateModel
@{
    ViewData["Title"] = "افزودن محصول";
}

<h2>افزودن محصول جدید</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Product.item.Price"></label>
        <input asp-for="Product.item.Price" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">ثبت محصول</button>
</form>
